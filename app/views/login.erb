<div class="container">
<form action="/login" method="post">
    <section> Login </section>
    <label for="username">Username:</label>
    <input type="text" name="username" value=" "><br>
    <label for="password">Password:</label>
    <input type="password" name="password" ><br>
    <input type="submit" value="Submit">
</form>

  <% if session[:error] && session[:error].is_a?(String) %>
<p><%= session[:error] %><p>
  <% else %>
<br><br>
  <% end %>
</div>

<div class="container">
<form action="/users/new" method="post">
  <section> Create a new account</section>
  <label for="username">Username:</label>
  <input type="text"  name="new[username]"><br>
  <label for="email">Email:</label>
  <input type="text" name="new[email]" value=" "><br>
  <label for="password">Password:</label>
  <input type="password" name="new[password]" ><br>
  <input type="submit" value="Submit">

  <% if session[:error] && session[:error].is_a?(Array) %>
<p><%= session[:error][0] %><p>
  <% else %>
<br><br>
  <% end %>
  
</form>
</div>


